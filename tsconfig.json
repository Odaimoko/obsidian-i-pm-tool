{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    // Essential. In the tutorial it uses "preserve" but it's wrong.
    "jsx": "react-jsx",
    // add this to avoid complaints about "React exported with export ="  
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts"
  ]
}
